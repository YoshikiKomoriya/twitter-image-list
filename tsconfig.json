{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["./src/*", "./functions/*", "./mock/*"],
      "@/*": ["./src/*", "./functions/*", "./mock/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@nuxt/types",
      "@nuxt/content",
      "@nuxtjs/axios",
      "@nuxtjs/vuetify",
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
